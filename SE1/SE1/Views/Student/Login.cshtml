@model User

<form class="row position-fixed" method="post">
    <div class="col-1" style="width:624px; height:740px; background-color:#fabc02">
        <img class="card-img-overlay" style="height:512px; width:512px; margin:340px 0px 0px 200px" src="@Url.Content("~/Images/tree.png")" />
        <img class="card-img-overlay" style="height:258px; width:258px; margin:540px 0px 0px 90px" src="@Url.Content("~/Images/tree.png")" />
        <img class="card-img-overlay" style="height:718px; width:718px; margin:180px 0px 0px -300px" src="@Url.Content("~/Images/tree.png")" />
    </div>

    <div class="col-1" style="height:540px; width:600px; margin:20px 0px 0px 70px">
        <p style="font-weight:600; width:600px; color:#666666; font-size:48px">
            Sign in to your account
        </p>
        <p style="width:600px; color:#ababab; font-size:18px">
            Smart printing service is connected with your myBK, please use your respected email and password to sign in
        </p>
        
        <input asp-for="Name" value="." style="margin-left:1500px; width:1px; height:1px" />
        <div class="row" style="width:600px">
            <p style="font-weight:600; color:#666666; font-size:24px">
                Username
            </p>
            <input asp-for="Email" style="height:60px; font-size:18px; color:#ababab; margin-left:12px" class="form-control" type="text" value="" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row" style="width:600px">
            <p style="font-weight:600; color:#666666; font-size:24px; margin-top:20px">
                Password
            </p>
            <input asp-for="Password" style="height:60px; font-size:18px; color:#ababab; margin-left:12px" class="form-control" type="text" value="" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <div>
                <input type="checkbox" style="width:20px; height:20px; margin-top:28px; margin-left:0px" />
                <p class="" style="width:600px; color:#666666; font-size:18px; margin:-30px 0px 0px 30px">
                    Remember me
                </p>
            </div>
        </div>
        <button type="submit" class="btn form-control" style="background-color:#fabc02; width:154px; height:57px; border-radius:10px; margin:30px 0px 0px 0px">
            <p style="color:white; text-align:center; font-size:24px; margin-top:3px">Sign in</p>
        </button>
        
    </div>

    
</form>
