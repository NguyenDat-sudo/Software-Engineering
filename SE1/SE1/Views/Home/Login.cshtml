<body style="height:800px">
    <a asp-controller="Home" asp-action="Index">
        <header class="header">
            <img src="~/Images/printer.png" alt="Smart Printing Service Logo" class="logo" style="width:100px; height:100px">
            <p style="font-weight:400;font-size:48px;display:flex; margin-top:15px;font-family:'Angkor'">Smart</p><span class="highlight">printing service</span>
        </header>
    </a>

    <div class="">
        <div class="" style="height:550px; width:607px; background-color:white; border-radius:15px; margin:auto">
            <img src="~/Images/printer.png" alt="Printer" class="printer-img" style="width:180px; height:180px; margin-left:213px; margin-top:40px">
            <div class="button-container" style="height:30px; margin-left:60px">
                <a asp-controller="Student" asp-action="Login">
                    <div class="btn btn-outline-warning login-button" style="height:70px">Student</div>
                </a>
                <a asp-controller="SSPS" asp-action="Login">
                    <div class="btn btn-outline-warning guest-button" style="height:70px">SPSO</div>
                </a>
            </div>
        </div>
    </div>
