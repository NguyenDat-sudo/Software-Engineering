@model List<Printer2>

@{
    ViewData["Title"] = "ShowImagesFromFolder";
}

<div class="row position-fixed">
    <div class="col-1" style="width:370px; height:755px; padding:20px 20px 20px 20px; border:1px solid #ababab">
        <div class="btn-group" role="group">
            <a asp-controller="Home" asp-action="Index" class="btn" style="padding:0px 0px 0px 20px">
                <img style="height:60px; width:60px" src="@Url.Content("~/Images/printer.png")" />
            </a>

            <a asp-controller="Home" asp-action="Index" class="btn">
                <b style="color:#666666; font-size:24px; text-align:center; padding:0px">smart</b>
                <i style="color:#fabc02; font-size:18px; text-align:center; padding:0px">printing service</i>
            </a>
        </div>

        <a asp-controller="SSPS" asp-action="Dashboard" class="btn" style="width:150px; height:40px; margin:30px 0px 0px 20px">
            <p style="display:inline-block; color:#ababab; font-size:18px">
                <i class="bi bi-person-circle"></i> Dashboard
            </p>
        </a>
        <a asp-controller="SSPS" asp-action="PrinterList" class="btn" style="width:350px; height:40px; margin:10px 0px 0px -16px">
            <b style="display:inline-block; color:#666666; font-size:18px; padding:0px 50px 0px 0px">
                <i class="bi bi-folder2"></i> Printer Management
            </b>
        </a>
        <a asp-controller="SSPS" asp-action="ViewHistory" class="btn" style="width:150px; height:40px; margin:10px 0px 0px 20px">
            <p style="display:inline-block; color:#ababab; font-size:18px; padding:0px 30px 0px 0px">
                <i class="bi bi-skip-start"></i> History
            </p>
        </a>
        <a asp-controller="SSPS" asp-action="UserList" class="btn" style="width:160px; height:40px; margin:10px 0px 0px 20px">
            <p style="display:inline-block; color:#ababab; font-size:18px; padding:0px 2px 0px 0px">
                <i class="bi bi-bell"></i> Notification
            </p>
        </a>
        <a asp-controller="SSPS" asp-action="Report" class="btn" style="width:150px; height:40px; margin:10px 0px 0px 20px">
            <p style="display:inline-block; color:#ababab; font-size:18px; padding:0px 30px 0px 0px">
                <i class="bi bi-gear"></i> Setting
            </p>
        </a>

        <div style="margin:270px 0px 0px 10px; border:3px solid #ababab; border-radius:10px; width:320px; height:95px">
            <img style="width:90px; height:90px; margin-bottom:40px; border-radius:8px; display:inline-block" src="https://www.theemotionmachine.com/wp-content/uploads/2021/03/53d05da0-19c1-48f8-ac0d-9a57498a4697.jpeg" />
            <div class="" style="display:inline-block; margin-top:10px">
                <p style="font-weight:600; color:#ababab; font-size:18px; padding:0px 0px 0px 10px">
                    Dat Nguyen
                </p>

                <p style="font-weight:600; color:#ababab; font-size:10px; padding:0px 0px 0px 10px">
                    dat.nguyentrinh@hcmut.edu.vn
                </p>
            </div> <i class="bi bi-box-arrow-right col-1" style="color:#ababab; font-size:60px"></i>
        </div>

    </div>

    <div class="col-1" style="width:780px; height:755px; margin-top:30px; margin-left:20px">
        <div class="row pt4">
            <div class="col-6" style="color:#666666">
                <h2 class="" >
                    Printer List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="SSPS" asp-action="AddPrinter" class="btn btn-primary" style="background-color:#fabc02; border:none">
                    <i class="bi bi-plus-circle"></i> Add New Printer
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped" style="margin-top:20px">
            <thead>
                <tr>
                    <th>
                        Printer Name
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Location
                        </td>
                        <td>
                            @obj.Active
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="SSPS" asp-action="EditPrinter" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:#fabc02; border:None">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="SSPS" asp-action="DeletePrinter" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
